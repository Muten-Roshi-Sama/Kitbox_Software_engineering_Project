<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
               xmlns:local="clr-namespace:aaa"
               x:Class="aaa.SimplePopup">

    <StackLayout>
        <HorizontalStackLayout Padding="10" Spacing="5" HorizontalOptions="FillAndExpand">
            <VerticalStackLayout Padding="10" Spacing="5" HorizontalOptions="FillAndExpand">
                <HorizontalStackLayout Padding="10" Spacing="5" HorizontalOptions="FillAndExpand">
                    <Label Text="Id"/>
                    <Entry Placeholder="Id" x:Name="IdEntry"/>
                </HorizontalStackLayout>
                <HorizontalStackLayout Padding="10" Spacing="5" HorizontalOptions="FillAndExpand">
                    <Label Text="Reference"/>
                    <Entry Placeholder="Reference" x:Name="ReferenceEntry"/>
                </HorizontalStackLayout>
                <HorizontalStackLayout Padding="10" Spacing="5" HorizontalOptions="FillAndExpand">
                    <Label Text="Code"/>
                    <Entry Placeholder="Code" x:Name="CodeEntry"/>
                </HorizontalStackLayout>
                <HorizontalStackLayout Padding="10" Spacing="5" HorizontalOptions="FillAndExpand">
                    <Label Text="Length"/>
                    <Entry Placeholder="Length" x:Name="LengthEntry"/>
                </HorizontalStackLayout>
                <HorizontalStackLayout Padding="10" Spacing="5" HorizontalOptions="FillAndExpand">
                    <Label Text="Height"/>
                    <Entry Placeholder="Height" x:Name="HeightEntry"/>
                </HorizontalStackLayout>
                <HorizontalStackLayout Padding="10" Spacing="5" HorizontalOptions="FillAndExpand">
                    <Label Text="Depth"/>
                    <Entry Placeholder="Depth" x:Name="DepthEntry"/>
                    </HorizontalStackLayout>
                <HorizontalStackLayout Padding="10" Spacing="5" HorizontalOptions="FillAndExpand">
                    <Label Text="Color"/>
                    <Entry Placeholder="Color" x:Name="ColorEntry"/>
                </HorizontalStackLayout>
            </VerticalStackLayout>
            <VerticalStackLayout Padding="10" Spacing="5" HorizontalOptions="FillAndExpand">
                <HorizontalStackLayout Padding="10" Spacing="5" HorizontalOptions="FillAndExpand">
                    <Label Text="priceSupplier1"/>
                    <Entry Placeholder="priceSupplier1" x:Name="priceSupplier1Entry"/>
                </HorizontalStackLayout>
                <HorizontalStackLayout Padding="10" Spacing="5" HorizontalOptions="FillAndExpand">
                    <Label Text="delaySupplier1"/>
                    <Entry Placeholder="delaySupplier1" x:Name="delaySupplier1Entry"/>
                </HorizontalStackLayout>
                <HorizontalStackLayout Padding="10" Spacing="5" HorizontalOptions="FillAndExpand">
                    <Label Text="priceSupplier2"/>
                    <Entry Placeholder="priceSupplier2" x:Name="priceSupplier2Entry"/>
                </HorizontalStackLayout>
                <HorizontalStackLayout Padding="10" Spacing="5" HorizontalOptions="FillAndExpand">
                    <Label Text="delaySupplier2"/>
                    <Entry Placeholder="delaySupplier2" x:Name="delaySupplier2Entry"/>
                </HorizontalStackLayout>
                <HorizontalStackLayout Padding="10" Spacing="5" HorizontalOptions="FillAndExpand">
                    <Label Text="Stock Available"/>
                    <Entry Placeholder="Stock Available" x:Name="AvailableEntry"/>
                </HorizontalStackLayout>
                <HorizontalStackLayout Padding="10" Spacing="5" HorizontalOptions="FillAndExpand">
                    <Label Text="Stock Ordered"/>
                    <Entry Placeholder="Stock Ordered" x:Name="OrderedEntry"/>
                </HorizontalStackLayout>
                <HorizontalStackLayout Padding="10" Spacing="5" HorizontalOptions="FillAndExpand">
                    <Label Text="Stock Reserved"/>
                    <Entry Placeholder="Stock Reserved" x:Name="ReservedEntry"/>
                </HorizontalStackLayout>
            </VerticalStackLayout>   
        </HorizontalStackLayout>
        <Button Text="Confirmer" Clicked="OnAddLineConfirmed"/>
    </StackLayout>
</toolkit:Popup>

