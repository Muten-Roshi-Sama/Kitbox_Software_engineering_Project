<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
               xmlns:local="clr-namespace:aaa"
               x:Class="aaa.AddSuppPopup">

    <StackLayout>
        <HorizontalStackLayout Padding="10" Spacing="5" HorizontalOptions="FillAndExpand">
            <HorizontalStackLayout Padding="10" Spacing="5" HorizontalOptions="FillAndExpand">
                <Label Text="Id Supplier"/>
                <Entry Placeholder="IdSupp" x:Name="IdEntry"/>
            </HorizontalStackLayout>
            <HorizontalStackLayout Padding="10" Spacing="5" HorizontalOptions="FillAndExpand">
                <Label Text="Price"/>
                <Entry Placeholder="Price" x:Name="PriceEntry"/>
            </HorizontalStackLayout>
            <HorizontalStackLayout Padding="10" Spacing="5" HorizontalOptions="FillAndExpand">
                <Label Text="Delay"/>
                <Entry Placeholder="Price" x:Name="DelayEntry"/>
            </HorizontalStackLayout>   
        </HorizontalStackLayout>
        <Button Text="Confirmer" Clicked="OnAddSuppConfirmed"/>
    </StackLayout>
</toolkit:Popup>